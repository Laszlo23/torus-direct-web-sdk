    "lint:ts": "eslint --fix 'src/**/*.ts'",
    "prepack": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "files": [
    "dist",
    "types",
    "public"
  ],
  "peerDependencies": {
    "@babel/runtime": "^7.9.6"
  },
  "dependencies": {
